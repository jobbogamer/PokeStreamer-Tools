<% let width = parseInt(config.style.imageWrapperWidth || config.style.imageSideLength),
    height = parseInt(config.style.imageWrapperHeight || config.style.imageSideLength); %>
<svg width="0" height="0">
    <defs>
        <clipPath id="soulLinkClipTop">
            <% switch (config.style.soulLinkOrientation) {
                   case 'vertical': %>
                    <rect x="0" y="0" width="<%- width / 2 %>" height="<%- height %>" />
                    <% break; %>

                <% case 'horizontal': %>
                    <rect x="0" y="0" width="<%- width %>" height="<%- height / 2 %>" />
                    <% break; %>

                <% case 'diagonal-forward': %>
                    <polygon points="0,<%- height %> 0,0 <%- width %>,0" />
                    <% break; %>

                <% case 'diagonal-backward': %>
                    <polygon points="0,0 <%- width %>,0 <%- width %>,<%- height %>" />
                    <% break; %>

                <% case 'custom': %>
                    <% break; %>

                <% default: throw new Error(`Invalid SoulLink Orientation: ${config.style.soulLinkOrientation}`); %>
            <% } %>
        </clipPath>
        <clipPath id="soulLinkClipBottom">
            <% switch (config.style.soulLinkOrientation) {
                   case 'vertical': %>
                    <rect x="<%- width / 2 %>" y="0" width="<%- width / 2 %>" height="<%- height %>" />
                    <% break; %>

                <% case 'horizontal': %>
                    <rect x="0" y="<%- height / 2 %>" width="<%- width %>" height="<%- height %>" />
                    <% break; %>

                <% case 'diagonal-forward': %>
                    <polygon points="0,<%- height %> <%- width %>,<%- height %> <%- width %>,0" />
                    <% break; %>

                <% case 'diagonal-backward': %>
                    <polygon points="0,0 0,<%- height %> <%- width %>,<%- height %>" />
                    <% break; %>

                <% case 'custom': %>
                    <% break; %>
            <% } %>
        </clipPath>
    </defs>
</svg>